/***********************/
/*Selected House*/
/************************/

.selected-house-wrapper
  position relative
  cursor pointer

.info-wrapper
  top 0px
  position absolute
  .thumbnail
    background-color color-off-white
    opacity .85

.selected-house-info
  border 1px color-border-light solid
  border-radius 5px
  color color-skin
  padding-left 0px
  padding-right 0px
  position relative
  z-index 99

.selected-house
  cursor pointer !important

.selected-prop-info-container
  padding 5px
  table
    margin-bottom 0px
  tbody
    tr
      th
        color color-skin
        font-size 9px !important
      td
        font-size 9px !important
        padding-top 3px
        padding-bottom 3px
  h5
    color color-skin
    margin-top 0px
    margin-bottom 3px
    font-size 10px !important
    font-weight 700
  a

    font-size 10px
    color color-skin
    &:hover
    &:active
    &:focus
      text-decoration none

.repeat-animation.ng-enter-stagger,
.repeat-animation.ng-leave-stagger,
.repeat-animation.ng-move-stagger {
  /* 200ms will be applied between each sucessive enter operation */
  -webkit-transition-delay:0.2s;
  transition-delay:0.2s;
}

.repeat-animation.ng-enter,
.repeat-animation.ng-leave,
.repeat-animation.ng-move {
  -webkit-transition:0.5s linear all;
  transition:0.5s linear all;
}

.repeat-animation.ng-leave.ng-leave-active,
.repeat-animation.ng-enter,
.repeat-animation.ng-move {
  -webkit-transition:0.5s linear all;
  transition:0.5s linear all;

  opacity:0;
}

.repeat-animation.ng-leave,
.repeat-animation.ng-move.ng-move-active,
.repeat-animation.ng-enter.ng-enter-active {
  opacity:1;
}


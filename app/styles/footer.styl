@import 'nib'
color-skin =#272727
color-app = #3C3C3C
color-white = lighten(color-app, 98)
color-blue = #396C95
color-lighten = lighten(color-app, 98)
color-light = light(color-app, 70)
color-link = lighten(color-app, 30)
color-link-hover = lighten(color-app, 10)
color-nav = lighten(color-app, 20)
shadow-blue = lighten(color-blue, 88)
text-shadow-blue = shadow-blue 1px 1px 0px;
@import 'functions'

/**********************
    =footer
***********************/

.footer-container
  background-color lighten(color-skin, 85)
  hr
    margin-top 0px
    margin-bottom 5px
  ul
    li
      font-size 11px
  h5
    font-size 11px
  p
    font-size 11px

.footer-wrapper
  padding 10px

.footer
  background-color lighten(color-skin, 25)
  height 60px
  p
    color color-lighten

.footer-content
  padding-top 15px
  padding-bottom 15px

.copyright
  display inline-block
  margin-top 10px


.properties-footer
  h5
    color color-blue
    text-shadow app-text-shadow
  p
    a
      color lighten(color-blue, 30)
      text-shadow-blue app-text-shadow

@import 'nib'
@import 'functions'

/**********************
    =footer
***********************/

.footer-container
  position fixed
  bottom 0px
  background-color lighten(color-skin, 85%)
  hr
    margin-top 0px
    margin-bottom 5px
  ul
    li
      font-size 11px
  h5
    font-size 11px
  p
    font-size 11px

.footer-wrapper
  padding 10px

.footer
  background-color lighten(color-skin, 60%)
  height 60px
  p
    color color-app-lighten

.footer-content
  padding-top 15px
  padding-bottom 15px

.copyright
  display inline-block
  margin-top 10px

.properties-footer
  h5
    color color-blue
    text-shadow app-text-shadow
  p
    a
      color lighten(color-blue, 30%)
      text-shadow-blue app-text-shadow

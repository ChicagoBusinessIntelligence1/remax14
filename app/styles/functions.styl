***********************/

color-skin = #272727
color-app = #3C3C3C
color-white = lighten(color-app, 98%)

water = #6495ED
fire = lighten(#A13B1F, 5%)
soft-wood = #74A377
hard-wood = #447373
soft-metal = #F4BF7F
hard-metal = #88A6BB
mountain-earth = #d8be86
mother-earth = #8F6D60
color-off-white = #F7F7F4;
color-blue = #396C95

colorNavPanel = #393939
colorButtonBackground = #428CB9
colorLogoWrapper = #F6F6F6
colorFontGray = #525252
colorGray = #4B4F54
colorSlash = #AAAAAA
copyrightBackgroundColor = #3F3F3F
colorRed = lighten(#B92025, 10%)
myTextShadow = #FFFFFF 1px 1px 0px
myTextShadow2 = #FFFFFF 2px 2px 0px
myBorderGray = 1px solid darken(#F2F2F2, 5%) !important

color-danger = lighten(red, 30%)
color-content = lighten(color-app, 94%)
color-lighten = lighten(color-app, 98%)
color-light = light(color-app, 70%)
color-darken = lighten(color-app, 90%)

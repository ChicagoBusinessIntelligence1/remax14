/**********************
      =Variables
***********************/

color-skin = #43464D
color-app = #3C3C3C
color-content = lighten(color-app, 94%)
color-lighten = lighten(color-app, 98%)
color-light = light(color-app, 70%)
color-darken = lighten(color-app, 90%)
color-border-light = lighten(color-app, 83%)
color-border-dark = lighten(color-app, 73%)
label-default-background = lighten(color-skin, 37%)

border-app-light = color-border-light 1px solid
border-app-dark = color-border-dark 1px solid
font-size-custom = 14px
font-app = font-size-custom "Helvetica Neue", Helvetica, Arial, sans-serif

/**********************
      =Mixins
***********************/

simple-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

custom-radius()
  -webkit-border-radius arguments
  -moz-border-radius argument
  border-radius argument
  border 2px border-default solid unless @border

/*striped table*/
stripe(even = color-lighten, odd = color-darken)
  tr
    background-color odd
    &.even
    &:nth-child(even)
      background-color even

/*comma-list*/
inline-list()
  li
    display inline

comma-list()
  inline-list()
  li
    &:after
      content ','
    &:last-child:after
      content ''

link-custom()
  font-size 14px unless @font-size
  color color-app unless @color
  &:hover
  &:active
  &:focus
    color lighten(color-app, 40%)

link-light()
  font-size 14px unless @font-size
  cursor pointer
  color lighten(color-app, 97%) !important
  &:hover
  &:active
  &:focus
    color lighten(color-app, 57%) !important

label-default-head()
  padding 10px 15px
  background-color label-default-background
  border-radius 0px
  display block
  font-size 0.9em unless @font-size
  text-align left
  margin-bottom 0

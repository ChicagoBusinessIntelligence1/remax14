@import 'nib'

@import 'functions'

/**********************
     =header
***********************/
.text-center
  text-align center

.header-container
  padding-right 15px
  padding-left 15px
  background-color lighten(color-skin, 80%)

.header-wrapper
  padding 10px

.logo-content
  position: relative;
  padding 0px
  img
    display inline-block
    position relative
    left -10px

    @media screen and (max-width: 992px)
      position relative
      center-it(120px)

.slogan-text
  padding-right: 0px !important;
  padding-left: 0px !important;
  p
    color color-blue
    font-family 'Noto Serif', serif
    font-size 16px
    font-weight 700
    letter-spacing 1px
    line-height 30px
    margin-bottom 0px
    text-shadow my-text-shadow

.ul-call-us
  margin 0px 0px 10px 0px

  @media screen and (min-width: 992px)
    margin-top 0px
    padding-top 10px !important

.callUsContent
  width 28px

.call-us
  color color-red
  text-shadow color-off-white 1px 1px 0px
  font-size 26px
  font-weight bold
  margin-left 5px !important

.one-stop-service
  padding 0px
  margin-bottom 10px
  img
    center-it(399px)

/*Social Media*/

.media-wrap-a

  @media screen and (max-width: 992px)
    padding-right 0px

.media-wrap-b

  @media screen and (max-width: 992px)
    padding-right 0px
    padding-left 0px

.social-div
  position relative
  padding-left 5px
  ul
    position relative
    margin-bottom 0px
    li
      padding 2px
      display inline-block

    @media screen and (min-width: 992px)
      text-align right

.social-media
  position relative
  height auto
  padding 0px

.social-img
  display inline-block

.custom-aligns
  position relative
  text-align right !important

.icons-wrapper
  padding-right 0px

.ul-icons
  position relative
  margin-bottom 0px
  li
    padding-right 0px

  @media screen and (min-width: 992px)
    bottom -35px
    padding-right 15px


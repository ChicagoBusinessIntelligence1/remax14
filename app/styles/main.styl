@import 'functions'
@import 'post'
@import 'header'
@import 'top-nav'
@import 'animation/test'
@import 'animation/css-animations'
@import 'animation/css-transitions'
@import 'animation/ng-animation'
@import 'footer'
@import 'aside'
@import 'fen-elements'
@import 'bg'
/**********************

     Variables
***********************/
base()

*
  margin 0

html
  -webkit-font-smoothing antialized
  font-size 0.8em

body
  color color-app
  font-size 1.1em
  background-color color-darken

hr
  border-color color-border-dark

h1, h2, h3, h4, h5, h6, legend
  color color-app

h6
  font-size 18px
  font-weight 700
  margin-bottom 5px !important
  margin-top 5px

.menu-link
  a
    font-family 'Hind', sans-serif

.btn-link-dark
  link-custom()

.btn-link-light
  link-light()

.btn-primary
  background-color label-default-background
  border-color lighten(label-default-background, 5%)
  &:hover
  &:focus
  &:active
    background-color lighten(label-default-background, 15%)
    border-color lighten(label-default-background, 10%)

/**********************
    =form
***********************/
textarea
input
  background-color lighten(color-app, 97%) !important
  color lighten(color-app, 27%) !important
  &:hover
  &:active
  &:focus
    background-color lighten(color-app, 98%) !important
    color color-app !important

/**********************
     =main content
**********************/
.main-content
  border-left border-app-light
  background-color color-content
  border-right border-app-light
  font-main()

.error input, .error textarea, .error select
  margin-bottom 16px

.btn-wrapper
  margin-bottom 25px

.content-wrapper
  font-main()
  background-color color-content
  border-left border-app-light
  min-height 1200px
  padding: 15px 30px;

/**********************
    Home Page
***********************/

.ul-first-line
  font-size 16px
  li
    a
      color lighten(color-skin, 40%)
      line-height 32px
      &:hover
      &:active
      &:focus
        text-decoration none

.bg-custom
  padding 10px

.li-first-line
  display: inline-block !important;
  width: 170px !important;

/**********************
      =Post
***********************/

.article-img
  float right

/**********************
      =about
***********************/
.custom-list
  comma-list()

table
  stripe()
  td
  torm

table#users
  stripe lighten(color-app, 25%) lighten(color-app, 10%)
  td, th
    color color-lighten

/**********************
    =contact us
***********************/

.contact-address
  custom-radius 15px
  border border-app-light
  width 300px
  padding 15px

.slide-view
  z-index 999

/*GreenSock practicing*/
#demo
  width 792px
  height 150px
  background-color #333
  padding 8px

#bar
  background-color #91e500
  color black
  position relative
  width 5px
  height 90px

#logo
  position relative
  top -38px !important
  left -10px
  width 60px !important
  height 60px !important

.datepicker.dropdown-menu
  width 250px
  height 290px
  button
    outline none
    border 0px
  tbody
    height 180px
  tbody
    button
      padding 0px
      width 20px
  &.datepicker-mode-1, &.datepicker-mode-2
    tbody
      button
        height 65px

.img-bagua
  display block
  margin 0 auto !important

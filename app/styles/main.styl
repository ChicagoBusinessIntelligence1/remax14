***********************/
.app-content-five
  padding-top 5px
  padding-bottom 5px

.btn-mob-dev
  vertical-align center

  @media screen and (max-width: 992px)
    width 100%

.alert-info
  margin-top 0px
  padding 7px
  font-size 14px
  font-weight 700
  background-color lighten(color-blue, 90%)

.alert-address
  background-color lighten(color-skin, 98%)
  border border-boot
  margin-top 0px
  margin-bottom 5px
  padding 7px
  font-size 14px
  font-weight 700

/**********************
      =Typography
  ***********************/
h5
  font-size 14
  font-weight 700

.text-info
  color lighten(color-blue, 15%)

.text-warning
  color color-red

.text-app
  color color-app

.read-more
  font-size 11px

.thumbnail
  margin-bottom 5px

/**********************
     =main content
**********************/
.remax-phone-sm
  font-size 18px
  font-weight 700
  color color-red

.call-remax-sm
  font-size 14px
  font-weight 700
  color lighten(color-blue, 15%)
  margin-bottom 5px

.main-wrapper
  background-color lighten(color-skin, 98%)

.main-content
  background-color color-content

.error input, .error textarea, .error select
  margin-bottom 16px

.btn-wrapper
  margin-bottom 25px

.content-wrapper
  background-color lighten(color-skin, 98%)
  padding 10px

  @media screen and (min-width: 992px)
    min-height 1200px
    padding 15px 30px


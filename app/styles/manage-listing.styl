@import 'nib'
@import 'functions'

/**********************
    =manage-listing
***********************/
.listing-basic-info-wrap
  padding-top 10px

.ul-basic-info
  margin-bottom 0px
  margin-top 5px
  li
    color color-link-hover
    font-size 12px
    font-style italic

  @media screen and (max-width: 992px)
    text-align center

.price-style
  app-link-info()
  font-weight 700
  font-size 20px
  letter-spacing 1px
  text-align right

  @media screen and (max-width: 992px)
    text-align center

h4
  margin-top 0px !important

.address-basic
  app-link()
  display block
  height 100%
  font-size 18px
  margin-top 0px
  margin-bottom 0px !display

  @media screen and (max-width: 992px)
    text-align center

.ul-basic-social
  margin-bottom 0px
  margin-top 5px
  li
    a
      color color-link
      font-size 12px
      &:hover
      &:active
      &:focus
        color color-link-hover
        text-decoration none

  @media screen and (max-width: 992px)
    text-align center

.prop-type
  font-size 14px
  font-style italic
  margin-bottom 15px

  @media screen and (max-width: 992px)
    text-align center

.sale-type
  margin-bottom 15px
  text-align right
  h5
    font-size 14px

  @media screen and (max-width: 992px)
    text-align center

.head-panel
  border-top-left-radius 5px
  border-top-right-radius 5px
  padding 10px
  background-color lighten(color-skin, 95%)
  border border-boot
  h4
    margin-top 0px
    margin-bottom 0px
  ul
    margin-bottom 0px

.panel-listing
  padding 10px
  border-top-left-radius 0px
  border-top-right-radius 0px
  border-top 0px !important
  margin-bottom 10px

.panel-basic-info
  padding 10px
  hr
    margin-top 0px
    margin-bottom 10px

.add-property
  button
  .btn-sm
  input
    width 100%

.txt-group
  label
    color lighten(color-skin, 30%)
    font-size 12px
  .form-control
    height 30px
    padding 5px
    font-size 12px

.listing-form
  h5
    font-size 13px
    font-weight 700
  h4
    font-weight 700
    font-size 16px
    margin 0px
  .form-group
    label
      color lighten(color-skin, 30%)
      font-size 12px
    input
      height 30px
      padding 5px
      font-size 12px

.basic-info-short
  font-size 12px

.inline-info-style
  font-size 14px

  @media screen and (max-width: 992px)
    font-size 12px

.ul-data-just
  li
    span
      font-size 13px
      display inline-block
      &:first-child
        font-weight 700
        width 145px

      @media screen and (max-width: 992px)
        font-size 12px

.gallery-wrapper
  margin-bottom 10px

.stripe-dark
  background-color lighten(color-skin, 94%)

.cursor-p
  cursor pointer

.error
  border 1px solid red !important

.error-note
  color red

@import 'nib'
@import 'functions'

/**********************
    =manage-listing
***********************/
.head-panel
  border-top-left-radius 5px
  border-top-right-radius 5px
  padding 10px
  background-color lighten(color-skin, 95%)
  border border-boot
  ul
    margin-bottom 0px

.panel-listing
  padding 10px
  border-top-left-radius 0px
  border-top-right-radius 0px
  border-top 0px !important

.panel-basic-info
  padding 10px
  hr
    margin-top 0px
    margin-bottom 10px

.new-listing-form
  h5
    font-size 13px
    font-weight 700
  h4
    font-weight 700
    font-size 16px
    margin 0px
  .form-group
    label
      color ligh
      font-size 12px
    input
      height 25px
      padding 5px
      font-size 12px

.basic-info-short
  font-size 12px



@import 'nib'
@import 'functions'

.img-gallery-wrapper
  overflow hidden

.slider-container
  position relative
  overflow hidden
  width 500px
  height 120px

.slider-wrapper
  display block
  position absolute
  left 42px
  width 640px
  height 120px
  overflow hidden
  background-color white

.btn-slide
  position relative
  display block
  text-align center
  vertical-align middle

.arrow-center
  position: absolute;
  top: 50%;
  left: 50%;
  height: 30%;
  width: 50%;
  margin: -15% 0 0 -25%;

.nav-image
  margin 5px
  display block

.number
  display block
  float left
  margin 3px
  width 20px
  height 20px
  background blue
  border-radius 50%
  text-align center
  color white
  cursor pointer

.pic-th
  display block
  float left
  margin 3px
  width 70px
  text-align center
  cursor pointer
  background-color white
  border 1px white solid


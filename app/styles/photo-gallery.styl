@import 'nib'
@import 'functions'

.slider-img-wrapper
  position relative
  width 720px
  height 560px
  overflow hidden
  background-color lightslategray

.slider-container
  position relative
  width 720px
  height 120px
  background-color lightblue

.slider-surface
  width 720px
  margin 0px auto

.slider-wrapper
  display block
  position absolute
  left 42px
  width 640px
  height 120px
  overflow hidden
  background-color mediumaquamarine

.btn-slide
  padding-top 30px

.nav-image
  margin 5px
  display block
  height 110px
  width 118px

.number
  display block
  float left
  margin 3px
  width 20px
  height 20px
  background blue
  border-radius 50%
  text-align center
  color white
  cursor pointer

.pic-th
  display block
  float left
  margin 3px
  width 70px
  text-align center
  cursor pointer
  background-color white
  border 1px white solid


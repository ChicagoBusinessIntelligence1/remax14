@import 'nib'
@import 'functions'

.img-gallery-wrapper
  height 640px
  background-color white
  overflow hidden

.main-gal-img
  width 700px
  height 480px

  @media screen and (max-width: 375px)
    width 330px
    height 240px


.slider-container
  position relative
  overflow hidden
  width 500px
  height 120px

.slider-surface
  width 720px
  margin 0px auto

.slider-wrapper
  display block
  position absolute
  left 42px
  width 640px
  height 120px
  overflow hidden
  background-color white

.btn-slide
  padding-top 40px

.nav-image
  margin 5px
  display block
  height 110px
  width 118px

.number
  display block
  float left
  margin 3px
  width 20px
  height 20px
  background blue
  border-radius 50%
  text-align center
  color white
  cursor pointer

.pic-th
  display block
  float left
  margin 3px
  width 70px
  text-align center
  cursor pointer
  background-color white
  border 1px white solid


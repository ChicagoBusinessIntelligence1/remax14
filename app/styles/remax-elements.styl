.elements-nav
  padding 5px 0px

.fen-element-wrapper
  size(width, height)
  border-radius 10px
  cursor pointer
  overflow hidden

.fen-element
  size(width, height)
  text-align center
  position relative
  span
    color color-light
    text-shadow 1px 0px lighten(color-app, 10)
    font-size 12px

.fen-element-cover
  padding-top 0px
  height 32px !important
  border-radius 3px
  width width
  relative 0px
  background-color #FBFBFB
  opacity .8

.vertical-alignment
  font-family font-family 'Karma', serif !important
  top 10%
  position absolute
  width 100%
  text-align center
  span
    text-transform uppercase
    color #ffffff

.vertical-alignment-cover
  @extend .vertical-alignment
  top 40%

ul.fen-elements
  margin 0 auto
  ul(style = disc)
  li
    position relative
    display inline-block !important
    list-style none
    margin-left auto
    margin-right auto
    width 150px !important
    height 150px !important

.slide-up
  position relative
  transition(1s)

.slide-up
  top - (height/ 2.9)

.slide-up.ng-hide
  top 0px


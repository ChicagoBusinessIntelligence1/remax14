@import 'nib'

color-skin =#272727
color-app = #3C3C3C
color-white = lighten(color-app, 98)
color-blue = #396C95
color-lighten = lighten(color-app, 98)
color-light = light(color-app, 70)
color-link = lighten(color-app, 30)
color-link-hover = lighten(color-app, 10)
color-nav = lighten(color-app, 20)
shadow-blue = lighten(color-blue, 88)
text-shadow-blue = shadow-blue 1px 1px 0px;

/*Remax*/
.elements-wrapper
  padding 15px

/*Template Styles*/
width = 128px
height = 80px

.article-wrapper
  border-radius(10px)

.element-1
  post-style(fire)

.element-2
  post-style(water)

.element-3
  post-style(soft-wood)

.element-4
  post-style(hard-wood)

.element-5
  post-style(soft-metal)

.element-6
  post-style(hard-metal)

.element-7
  post-style(mountain-earth)

.element-8
  post-style(mother-earth)

.element-post-1
  post-comment-style(fire)

.element-post-2
  post-comment-style(water)

.element-post-3
  post-comment-style(soft-wood)

.element-post-4
  post-comment-style(hard-wood)

.element-post-5
  post-comment-style(soft-metal)

.element-post-6
  post-comment-style(hard-metal)

.element-post-7
  post-comment-style(mountain-earth)

.element-post-8
  post-comment-style(mother-earth)

.info
  color color-skin !important
  font-weight 700
  font-size 12px
  line-height 15px
  position relative
  top -7px


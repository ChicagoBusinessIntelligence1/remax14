@import 'nib'

@import 'functions'

/**********************
     =top-nav
***********************/

.h-logo
  font-size 17px !important
  font-weight 700
  font-size 17px !important
  color color-off-white !important
  margin 0px !important

.navbar-auth
  background-color color-skin
  padding-top 8px
  padding-bottom 8px

.auth-text
  display inline-block
  padding-left 5px
  padding-right 5px
  font-family 'Raleway', sans-serif

.nav-auth
  margin-bottom 0px !important
  li
    a
      font-size 1em
      &:hover
      &:focus
      &:active
        text-decoration none

.real-estate-rc
  display inline-block
  font-family 'Roboto Slab', serif !important
  color lighten(color-skin, 40%) !important
  font-size .9em !important
  letter-spacing 1px !important

.fb-name
  display inline-block
  margin-left 5px !important
  display inline-block

.navbar-default .navbar-nav > .open > a, .navbar-default .navbar-nav > .open > a:hover, .navbar-default .navbar-nav > .open > a:focus
  background-color inherit

.img-fb
  width 20px
  height 20px
  margin-left (@width / 4) !important

.divider
  margin-top 3px !important
  margin-bottom 3px !important

.navbar-app
  margin-bottom 0px
  border-radius 0px
  border 0px
  background-color lighten(color-skin, 10%) !important
  li
    a
      font-size 13px !important
      .text
        padding-left 5px
        display inline-block
      .fa-angle-down
        margin-left 5px !important

.li-create-account
  a
    font-size 12px
    color color-off-white !important
    cursor pointer
    &:hover
      color lighten(colorBlue, 30%) !important
  em
    color color-off-white !important
    &:hover
      color lighten(colorBlue, 30%)




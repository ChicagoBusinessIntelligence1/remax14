@import 'functions'

/**********************
     =top-nav
***********************/

.h-logo
  font-size 17px !important
  font-weight 700
  font-size 17px !important
  color color-off-white !important
  margin 0px !important

.navbar-auth
  background-color color-skin
  padding-top 8px
  padding-bottom 8px

.auth-text
  display inline-block
  padding-left 5px
  padding-right 5px
  font-family 'Raleway', sans-serif

.nav-auth
  margin-bottom 0px !important
  li
    a
      font-size 12px
      color color-off-white !important
      cursor pointer
      &:hover
      &:focus
      &:active
        text-decoration none
  @media screen and (max-width: 992px)
    text-align center

.btn-user
  font-size 12px
  color lighten(color-app, 76%) !important
  cursor pointer
  &:hover
  &:focus
  &:active
    color color-off-white !important
    text-decoration none

.real-estate-rc
  display inline-block
  font-family 'Roboto Slab', serif !important
  color lighten(color-skin, 40) !important
  font-size .9em !important
  letter-spacing 1px !important

  @media screen and (max-width: 992px)
    text-align center

.fb-name
  display inline-block
  margin-left 5px !important
  display inline-block
  text-transform uppercase
  color lighten(color-blue, 70) !important
  &:hover
  &:focus
  &:active
    color lighten(color-blue, 50) !important

.navbar-default .navbar-nav > .open > a, .navbar-default .navbar-nav > .open > a:hover, .navbar-default .navbar-nav > .open > a:focus
  background-color inherit

.navbar-remax
  position relative

  @media screen and (min-width: 992px)
    float right !important


.img-fb
  width 20px
  height 20px
  margin-left (@width / 4) !important

.top-nav-menu
  .btn
    text-align left !important

.divider
  margin-top 3px !important
  margin-bottom 3px !important

.navbar-app
  margin-bottom 0px
  border-radius 0px
  border 0px
  background-color lighten(color-skin, 10) !important
  li
    a
      font-size 13px !important
      .text
        padding-left 5px
        display inline-block
      .fa-angle-down
        margin-left 5px !important



.user-profile-popover
  line-height 26px
  ul
    li
      a
        color lighten(color-app, 20%)
        cursor pointer
        &:hover
        &:active
        &:focus
          text-decoration none
          color color-app

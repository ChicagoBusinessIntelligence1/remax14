        input.input-sm.input-sm.form-control(id="uName" placeholder="{{user.first_name}}"  required)

    .form-group
      .col-sm-5
        label First Name:
      .col-sm-7
        input.input-sm.form-control(id="fName" placeholder="{{user.first_name}}"  required)

    .form-group
      .col-sm-5
        label Last Name:
      .col-sm-7
        input.input-sm.form-control(id="lName" placeholder="{{user.last_name}}" required)

    .form-group
      .col-sm-5
        label MLS Id:
      .col-sm-7
        input.input-sm.form-control(id="mls-id" placeholder="MLS Id" required)


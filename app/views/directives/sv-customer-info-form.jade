.well
  form.form-horizontal(name="customerForm" id="customerForm" novalidate)
    .form-group
      label.col-sm-5(for='uName') User Name:
      .col-sm-7
        input.input-sm.input-sm.form-control(id="uName" ng-model='customer.userName' placeholder="User Name"  required)

    .form-group
      .col-sm-5
        label First Name:
      .col-sm-7
        input.input-sm.form-control(id="fName" placeholder="First Name" ng-model='customer.fname' required)

    .form-group
      .col-sm-5
        label Last Name:
      .col-sm-7
        input.input-sm.form-control(id="lName" ng-model='customer.lname' placeholder="Last Name" required)

    .form-group
      .col-sm-5
        label Email:
      .col-sm-7
        input.input-sm.form-control(id="email" ng-model='customer.email' placeholder="Fb Email" required)

    .form-group
      .col-sm-5
        label Phone Number:
      .col-sm-7
        input.input-sm.form-control(id="phone" ng-model='customer.phone' placeholder="Phone Number" required)

    .save-profile-changes
      sv-btn-save-profile-info
    hr
    .text-right
      sv-del-profile

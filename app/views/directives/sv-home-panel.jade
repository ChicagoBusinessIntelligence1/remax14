div
  fa-app( ng-style='myStyle')
    fa-scroll-view(fa-pipe-from='handler')
      fa-view(ng-repeat='home in homes')
        fa-modifier(fa-size='[{{wsm}},{{hsm}}]' fa-align="[0, 0]" fa-origin="[0, 0]")
          fa-surface(fa-pipe-to='handler' fa-size='[{{wsm}},{{hsm}}]' ng-mouseout='hideInfo(home)' ng-mouseover='showInfo(home)')
            img.thumbnail(ng-src="{{home.image}}" style='width:{{wsm}}px;height:{{hsm}}px')
          fa-modifier(fa-size='[{{wsm}},{{hsm/5}}]' fa-origin="[0, 1]" fa-align="[0, 1]"  fa-opacity="opacityFooter.get()")
            fa-surface(fa-pipe-to='handler' fa-background-color="'{{colorSkin}}'" fa-color="'white'" style='font-size:10px; z-index:999')
              .home-page-listing-info
                .row
                  .col-xs-4
                    ul.list-unstyled
                      li
                        ul.list-inline
                          li
                            i.fa.fa-arrow-down.fa-fw
                          li
                            h5 {{home.price | currency}}
                      li
                        span Status: {{home.status}}
                  .col-xs-4
                    ul.list-unstyled
                      li
                        span {{home.city}}, &nbsp
                        span {{home.state}}
                      li
                        span {{home.zip}}
                  .col-xs-4
                    ul.list-unstyled
                      li
                        span {{home.bedrooms}} bd, &nbsp
                        span {{home.fullBathrooms}} ba
                      li
                        span {{home.propertySize}}


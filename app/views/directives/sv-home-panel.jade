div
  fa-app(ng-style='myStyle' fa-perspective="500")
    fa-scroll-view(fa-pipe-from='handler'  id='scrollView' fa-options="options.homePageScroll")
      fa-modifier(ng-repeat='home in homes'   fa-rotate-x='angle.get()' fa-size='home.size.get()' fa-translate='home.shift.get()' fa-align="[0, 0]" fa-origin="[0, 0]")
        fa-surface(fa-pipe-to='handler')
          a.thumbnail()
            img(ng-src="{{home.image}}" style='width:{{wsm}}px;height:{{hsm}}px')

.listing-header-container
  div
    .listing-navigation-container(ng-if='!isTemplate')
      .row
        .col-sm-6
          ol.breadcrumb.breadcrumb-app
            li
              a.btn.btn-link.btn-back(sv-back)
                i.fa.fa-arrow-left.fa-fw
                | &nbsp Previous Page

        .col-sm-6
          ul.list-inline.text-right
            li
              button.btn.btn-default.btn-draft
                i.fa.fa-globe.fa-fw.fa-lg
                | Post
            li
              button.btn.btn-default.btn-draft(ng-click='delDraft()')
                i.fa.fa-trash.fa-fw.fa-lg
                | Delete

    div(ng-if='isTemplate')
      .row
        .col-sm-12
          h3 New Listing for Sale
          hr
      ul.list-inline.text-right
        li
          sv-cancel-view
        li
          button.btn.btn-sm.btn-info(ng-click='saveTemplate(homeForm)' ng-disabled="homeForm.$valid || homeForm.$pristine")
            i-i.fa.fa-save.fa-fw
            | Save Listing

  div(ng-if='!isTemplate')
    .row
      .col-sm-6.col-xs-12
        blockquote
          h3 {{home|showSectionProp:'price'| currency:"$":0}}
          h4.h-address
            | {{home|showSectionProp:'street'}},
            | {{home|showSectionProp:'city'}},
            | {{home|showSectionProp:'state'}}
            | {{home|showSectionProp:'zip'}}
          h5.prop-type.text-info {{home|showSectionProp:'propertyType'}}

      .col-sm-6.col-xs-12
        h4.label.label-default {{home|showSectionProp:'propertyStatus'}}
        sv-sale-type(home='home')
    .address-container
      .row
        .col-md-9.col-xs-12


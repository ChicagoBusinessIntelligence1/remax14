div
  .head-panel.cursor-p(ng-click='isVisible=!isVisible')
    .row
      .col-xs-12
        ul.list-inline
          li
            h4.text-info {{title}}
          li.pull-right
            a.pull-right(href="")
              i.fa.fa-angle-double-up.fa-fw(ng-show='isVisible')
              i.fa.fa-angle-double-down.fa-fw(ng-hide='isVisible')
  .panel.panel-default.panel-listing.info-slider(ng-show='isVisible')
    .row
      .col-sm-6.col-xs-12
        ul.ul-data-just.list-unstyled
          li(ng-repeat='p in info' ng-hide='$even')
            span {{p.$id}}
            span {{p.$value}}

      .col-sm-6.col-xs-12
        ul.ul-data-just.list-unstyled
          li(ng-repeat='p in info' ng-hide='$odd')
            span {{p.$id}}
            span {{p.$value}}


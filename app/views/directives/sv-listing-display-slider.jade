div
  .head-panel.cursor-p
    .row
      .col-xs-12
        ul.list-inline
          li
            h4.text-info {{title}}
          li
            a(href="")
              i.fa.fa-edit.fa-fw(ng-click='editListing()')
          li.pull-right(ng-click='toggleShow()')
            a.pull-right(href="")
              i.fa.fa-angle-double-up.fa-fw(ng-show='isVisible')
              i.fa.fa-angle-double-down.fa-fw(ng-hide='isVisible')
  .panel.panel-default.panel-listing.info-slider(ng-show='isVisible')
    .row(ng-if='title==="Property Description"')
      .col-md-12
        p {{info.text}}
        sv-area
    .row(ng-if='title!=="Property Description"')
      .col-sm-6.col-xs-12
        ul.ul-data-just.list-unstyled
          li(ng-repeat='(id, p) in info' ng-hide='$even')
            span {{id | keyConversion}} :
            span {{p | boolToBinery}}

      .col-sm-6.col-xs-12
        ul.ul-data-just.list-unstyled
          li(ng-repeat='(id, p) in info' ng-hide='$odd')
            span {{id | keyConversion}} :
            span {{p | boolToBinery}}


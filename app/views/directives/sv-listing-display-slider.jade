div
  .head-panel.cursor-p(ng-click='toggleShow()')
    .row
      .col-xs-11
        ul.list-inline
          li
            h4.text-info {{title | keyConversion}}
          li(ng-show='isVisible')
            sv-btn-action(icon='fa-edit' action='editListing()' ng-hide='isEdit || isTemplate')
            sv-btn-action(icon='fa-save' action='saveSection()' ng-show='isEdit || isTemplate')
            sv-btn-action(icon='fa-remove' action='cancelEditListing()' ng-show='isEdit || isTemplate')
      .col-xs-1
        .text-right(href="")
          i.fa.fa-angle-double-up.fa-fw(ng-show='isVisible')
          i.fa.fa-angle-double-down.fa-fw(ng-hide='isVisible')
  .panel.panel-default.panel-listing.info-slider(ng-show='isVisible')
    // If there is only one property on section
    form(name="form" id="form")
      .row(ng-if="isSingleProp===1")
        .col-sm-12
          ul.ul-data-just.list-unstyled
            li.row(ng-repeat='p in section')
              .col-xs-12(ng-if='!isEdit && !isTemplate') {{p.value | boolToBinery}}
              //  edit
              .col-xs-12(ng-switch='p.type' ng-if='isEdit || isTemplate')
                sv-txt(ng-switch-when='txt' house='house' title='{{index}}' label='{{p.$id}}' r='')
                sv-chbx(ng-switch-when='chbx' house='house' title='{{index}}' label='{{p.$id}}')
                sv-area(ng-switch-when='area' house='house' title='{{index}}' label='{{p.$id}}')
      .row(ng-if="isSingleProp>1")
        .col-sm-6.col-xs-12
          ul.ul-data-just.list-unstyled
            li.row(ng-repeat='p in section' ng-show='$even')
              div.listing-label.col-sm-5.col-xs-6 {{p.$id | keyConversion}}:
              div.content-info.col-sm-7.col-xs-6(ng-if='!isEdit && !isTemplate') {{p.value | boolToBinery}}
              div.content-info.col-sm-7.col-xs-6(ng-switch='p.type' ng-if='isEdit || isTemplate')
                sv-txt(ng-switch-when='txt' house='house' title='{{index}}' label='{{p.$id}}' r='required.indexOf(p.$id)>-1')
                sv-chbx(ng-switch-when='chbx' house='house' title='{{index}}' label='{{p.$id}}' r='required.indexOf(p.$id)>-1')
                sv-area(ng-switch-when='area' house='house' title='{{index}}' label='{{p.$id}}' r='required.indexOf(p.$id)>-1')
        .col-sm-6.col-xs-12
          ul.ul-data-just.list-unstyled
            li.row(ng-repeat='p in section' ng-show='$odd')
              div.listing-label.col-sm-5.col-xs-6 {{p.$id | keyConversion}}:
              div.content-info.col-sm-7.col-xs-6(ng-if='!isEdit && !isTemplate') {{p.value | boolToBinery}}
              div.content-info.col-sm-7.col-xs-6(ng-switch='p.type' ng-if='isEdit || isTemplate')
                sv-txt(ng-switch-when='txt' house='house' title='{{index}}' label='{{p.$id}}' r='required.indexOf(p.$id)>-1')
                sv-chbx(ng-switch-when='chbx' house='house' title='{{index}}' label='{{p.$id}}' r='required.indexOf(p.$id)>-1')
                sv-area(ng-switch-when='area' house='house' title='{{index}}' label='{{p.$id}}' r='required.indexOf(p.$id)>-1')

      sv-add-feature(house='house' title='{{index}}' save-section='saveSection()' ng-if='(isEdit || isTemplate) && isButtonShown')

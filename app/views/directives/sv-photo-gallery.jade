.row
  .col-sm-6
    h1 Photo Galery
      fa-app.slider-wrapper(style='width:400px;height:350px;overflow:hidden')
        fa-modifier.slider-content.row(fa-opacity='selectedImage.opacity.get()' )
          fa-image-surface(fa-image-url='{{selectedImage.url}}' fa-size = '[400,200]' )
        fa-modifier(fa-translate='[0,200,0]' fa-size='[100,200]')
          fa-modifier(fa-translate='[0,50,0]')
            fa-surface(fa-click='slideLeft()').cursor-p
              i.fa.fa-long-arrow-left
          fa-modifier(fa-translate='[40,0,0]')
            fa-scroll-view(fa-pipe-from='scrollHandler' id='imageScroll' fa-options='options.imageScroll')
              fa-view(ng-repeat='image in images track by $index' fa-size='[undefined,60]')
                fa-modifier(fa-size='[60,60]')
                  fa-surface(fa-pipe-to='scrollHandler'   fa-size='[60,60]' fa-click='setSelectedImage(image,$done)').cursor-p
                    img(ng-src="{{image.url}}").nav-image
          fa-modifier(fa-translate='[365,50,0]')
            fa-surface(fa-click='slideRight()').cursor-p
              i.fa.fa-long-arrow-right

.row
  .col-sm-6
    h1 Photo Galery
      fa-app.slider-wrapper(style='width:400px;height:300px')
        fa-modifier.slider-content.row(fa-opacity='selectedImage.opacity.get()' )
          fa-image-surface(fa-image-url='{{selectedImage.url}}' fa-size = '[300,200]' )
        fa-modifier(fa-translate='[0,200,0]')
          fa-scroll-view( fa-pipe-from='scrollHandler' fa-options='options.imageScroll' )
            fa-view(ng-repeat='image in images' )
              fa-modifier(fa-size='[60,60]' )
                fa-image-surface(fa-image-url='{{image.url}}' fa-size='[50,50]'  fa-click='setSelectedImage(image,$done)').cursor-p

.popover.broker-app-popover
  .arrow
  h3.popover-title Are you sure you want delete your profile?
  .popover-content
    button.btn.btn-danger.btn-sm.btn-save(ng-click='deleteProfile();$hide()' ng-disabled='form.$invalid' )
      i.fa.fa-check
      | &nbsp Delete
    button.btn.btn-default.btn-sm.btn-cancel(ng-click='$hide()')
      i.fa.fa-times
      | &nbsp Cancel

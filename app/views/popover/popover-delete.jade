
.popover.popover-delete
  .arrow
  h4.popover-title.text-center(ng-bind="title" ng-show="title")
  .row.popover-row.popover-content
    .col-xs-6(ng-show="!f.$id")
      button.btn.btn-danger.btn-sm(ng-click="remove(key)") Удалить
    .col-xs-6
      button.btn.btn-default.btn-sm(ng-click="$hide()") Отменa
